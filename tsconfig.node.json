{
  "compilerOptions": {
    // "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ESNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "composite": true,
    // "outDir": "./dist-node",
    // "target": "ES2022",
    "lib": ["ES2023"],
    "module": "esnext",
    "skipLibCheck": true,

    /* Bundler mode */
    // "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true, removendo para teste
    "isolatedModules": true,
    "moduleDetection": "force",
    // "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  
  "include": ["vite.config.ts"],
  "exclude": ["src/**/*", "node_modules"],
  "extends": "./tsconfig.json",
}
